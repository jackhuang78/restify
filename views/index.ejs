<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
    Collection:
    <span class="caret"></span>
  </button>
  <ul id="dropdown-menu" class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
    <li id="dropdown-menu-item" role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
  </ul>
</div>

	<h2>----------</h2>

	<div id="content"></div>

	<script type="text/jsx">
		var DropdownItem = React.createClass({
			render: function() {
				return (
					<li role="presentation">
						<a role="menuitem" tabindex="-1" href="#">Item</a>
					</li>
				);
			}	
		});

		var DropdownItemList = React.createClass({
			render: function() {
				return (
					<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
						<DropdownItem />
					</ul>
				);
			}
		});

		var DropdownBox = React.createClass({
			render: function() {
				return (
					<div class="dropdown">
					  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
					    Table
					    <span class="caret"></span>
					  </button>
					  
					</div>
				);
			}
		});

		React.render(
      <DropdownBox />, document.getElementById('content')
    );
    console.log('done');
	</script>


