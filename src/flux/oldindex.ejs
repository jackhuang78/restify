		<script type="text/jsx">
			var TableSelectItem = React.createClass({
				render: function() {
					return (
						<option value={this.props.data}>{this.props.data}</option>
					);
				}	
			});

			var TableSelect = React.createClass({
				getInitialState: function() {
					return {data: []};
				},
				componentDidMount: function() {
					$.get('_collections', function(data, status) {
						if(status !== 'success') {
							alert('Failed to load tables');
						} else {
							//alert(data);
							this.setState({data : data});

						}
					}.bind(this));
				},
				render: function() {
	
					
					var options = this.state.data.map(function(item, idx) {
						return (
							<TableSelectItem data={item} />
						);	
					});
					return (
						//<div className="row">
						//  <div className="col-md-1" />
						//	<div className="col-md-2">
								<select className="js-example-placeholder-single">
									{options}
								</select>
						//	</div>
						//</div>
					);
				}
			});

			React.render(
	      <TableSelect />, document.getElementById('content')
	    );

	    $(".js-example-placeholder-single").select2({
  			placeholder: "Select a state",
  
  			width:'100%'	
			});
	    
	    
	    console.log('done');
		</script>


